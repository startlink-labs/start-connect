{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "StartConnect",
  "version": "0.1.2",
  "identifier": "com.startlink.start-connect",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite:build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "StartConnect - produced by StartLink Inc.",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-open",
            "dialog:default",
            "http:default",
            "fs:allow-read-file",
            "fs:allow-read-dir",
            "fs:allow-exists",
            "shell:allow-open",
            "core:event:default",
            "deep-link:default",
            "updater:default",
            "process:allow-restart"
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["sfhsfiletrans"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzQTA4MTEzNDdFNTU2MEUKUldRT1Z1VkhFNEdnMDdDL2pxUklxN25tODJjUlA4aVFIS0FFVEwwdGFZYjc4VkdITFg2bmJPQ08K",
      "endpoints": [
        "https://github.com/startlink-labs/start-connect/releases/latest/download/latest.json"
      ]
    }
  }
}
