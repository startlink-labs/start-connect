{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SF-HS File Transfer",
  "version": "0.1.0",
  "identifier": "com.startlink.sf-hs-file-trans",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite:build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SF-HS File Transfer - produced by StartLink Inc.",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-open",
            "dialog:default",
            "http:default",
            "fs:allow-read-file",
            "fs:allow-read-dir",
            "fs:allow-exists",
            "shell:allow-open",
            "core:event:default",
            "deep-link:default"
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["sfhsfiletrans"]
      }
    }
  }
}
